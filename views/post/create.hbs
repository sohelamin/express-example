<div class="card">
    <div class="card-header">Create New Post</div>
    <div class="card-body">
        <a href="/posts" title="Back"><button class="btn btn-warning btn-sm"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button></a>
        <br />
        <br />

        <form method="POST" action="/posts" accept-charset="UTF-8" class="form-horizontal">
            <div class="form-group">
                <label for="title" class="col-md-4 control-label">Title</label>
                <div class="col-md-6">
                    <input class="form-control" name="title" type="text" id="title">
                </div>
            </div>
            <div class="form-group">
                <label for="content" class="col-md-4 control-label">Content</label>
                <div class="col-md-6">
                    <textarea class="form-control" name="content" cols="50" rows="10" id="content"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <input class="btn btn-primary" type="submit" value="Create">
                </div>
            </div>
        </form>
    </div>
</div>
